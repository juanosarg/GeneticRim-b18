<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Implants -->


  
  
  <HediffDef Name="HybridPartsBase" Abstract="True" ParentName="AddedBodyPartBase">
    <hediffClass>Hediff_AddedPart</hediffClass>
    <defaultLabelColor>(232, 157, 27)</defaultLabelColor>
    <isBad>false</isBad>
	<addedPartProps>
         <isBionic>true</isBionic>
         <isSolid>true</isSolid>
     </addedPartProps>
  </HediffDef>

  <HediffDef ParentName="HybridPartsBase">
    <defName>BearClaws</defName>
    <label>bear claws</label>
    <comps>
      <li Class="HediffCompProperties_VerbGiver">
		<tools>
          <li>
            <label>bear claws</label>
            <capacities>
              <li>Scratch</li>
            </capacities>
            <power>25</power>
            <cooldownTime>1</cooldownTime>
          </li>
        </tools>
        
      </li>
	
    </comps>
    <spawnThingOnRemoved>BearClaws</spawnThingOnRemoved>
    <addedPartProps>
      <isGoodWeapon>true</isGoodWeapon>
      <partEfficiency>1.1</partEfficiency>
    </addedPartProps>
	
  </HediffDef>
  
  <HediffDef ParentName="HybridPartsBase">
    <defName>Ovipositor</defName>
    <label>ovipositor</label>
	<stages>
      <li>
	    <painOffset>0.1</painOffset>
        <painFactor>1.1</painFactor>
      </li>
    </stages>
    <comps>
      
	  <li Class="NewHatcher.HediffCompProperties_Hatcher">
           <hatcherDaystoHatch>.5</hatcherDaystoHatch>
      </li>
    </comps>
    <spawnThingOnRemoved>Ovipositor</spawnThingOnRemoved>
    
	
  </HediffDef>
  
  <HediffDef ParentName="HybridPartsBase">
    <defName>MuffaloMuscles</defName>
    <label>muffalo strengthened muscles</label>
	<stages>
		<li>
         <capMods>
            <li>
               <capacity>Manipulation</capacity>
               <offset>0.2</offset>
            </li>
           
         </capMods>
		</li>	 
      </stages>
   
    <spawnThingOnRemoved>MuffaloMuscles</spawnThingOnRemoved>
    
	
  </HediffDef>
  
  <HediffDef ParentName="HybridPartsBase">
    <defName>BoomalopeNodules</defName>
    <label>boomalope nodules</label>

    <comps>
      
	  <li Class="NewHatcher.HediffCompProperties_Exploder">
           <explosionForce>6</explosionForce>
      </li>
    </comps>
    <spawnThingOnRemoved>BoomalopeNodules</spawnThingOnRemoved>
    
	
  </HediffDef>
  
  <HediffDef ParentName="HybridPartsBase">
    <defName>WolfMuscularFibers</defName>
    <label>wolf muscular fibers</label>
	<stages>
		<li>
         <capMods>
            <li>
               <capacity>Moving</capacity>
               <offset>0.15</offset>
            </li>
         </capMods>
		</li>	 
     </stages>
   
    <spawnThingOnRemoved>WolfMuscularFibers</spawnThingOnRemoved>
    
	
  </HediffDef>

  <HediffDef ParentName="HybridPartsBase">
    <defName>InsectoidAntennae</defName>
    <label>insectoid antennae</label>
	<stages>
		<li>
         <capMods>
            <li>
               <capacity>Sight</capacity>
               <offset>0.15</offset>
            </li>
			<li>
               <capacity>Hearing</capacity>
               <offset>0.15</offset>
            </li>
         </capMods>
		</li>
	    	
     </stages>
   
    <spawnThingOnRemoved>InsectoidAntennae</spawnThingOnRemoved>
    
	
  </HediffDef>
  
  <HediffDef ParentName="HybridPartsBase">
    <defName>HumanThrumboHorn</defName>
    <label>thrumbo horn</label>
	<stages>
		<li>
         <capMods>
            <li>
               <capacity>Sight</capacity>
               <offset>-0.1</offset>
            </li>
			
         </capMods>
		</li>
	    	
     </stages>
	 <comps>
	 <li Class="HediffCompProperties_VerbGiver">
		<tools>
          <li>
            <label>thrumbo horn</label>
            <capacities>
              <li>Scratch</li>
            </capacities>
            <power>30</power>
            <cooldownTime>.9</cooldownTime>
          </li>
        </tools>
      
      </li>
	  </comps>
   
    <spawnThingOnRemoved>HumanThrumboHorn</spawnThingOnRemoved>
    
	
  </HediffDef>

  <HediffDef ParentName="HybridPartsBase">
    <defName>VenomousFangs</defName>
    <label>venomous fangs</label>
	<stages>
		<li>
         <capMods>
            <li>
               <capacity>Talking</capacity>
               <offset>-0.1</offset>
            </li>
			
         </capMods>
		</li>
	    	
     </stages>
	 <comps>
	 <li Class="HediffCompProperties_VerbGiver">
		<tools>
          <li>
            <label>venomous fangs</label>
            <capacities>
              <li>VeryToxicBite</li>
            </capacities>
            <power>25</power>
            <cooldownTime>1</cooldownTime>
          </li>
        </tools>
        
      </li>
	  </comps>
   
    <spawnThingOnRemoved>VenomousFangs</spawnThingOnRemoved>
    <addedPartProps>
      <isGoodWeapon>true</isGoodWeapon>
    </addedPartProps>
	
  </HediffDef>

</Defs>